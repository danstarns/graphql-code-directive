{
  "exclude": ["./tests/", "./node_modules/", "./dist/", "./examples/"],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
